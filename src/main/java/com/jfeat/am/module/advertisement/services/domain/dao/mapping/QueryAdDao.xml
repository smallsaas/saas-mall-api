<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.advertisement.services.domain.dao.QueryAdDao">
    <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                t_ad.id, t_ad.group_id AS groupId, t_ad.name, t_ad.image, t_ad.enabled, t_ad.target_url AS targetUrl, t_ad.org_id AS orgId, t_ad.strategy
    </sql>


    <select id="findAdPage" resultType="com.jfeat.am.module.advertisement.services.domain.model.record.AdRecord" parameterType="com.jfeat.am.module.advertisement.services.domain.model.record.AdRecord">
        SELECT
        <include refid="Base_Column_List"/>
        FROM t_ad
        WHERE 1=1
        <if test="record.id != null and record.id>0 ">
            AND t_ad.id LIKE CONCAT('%',#{record.id},'%')
        </if>
        <if test="record.groupId != null and record.groupId>0 ">
            AND t_ad.group_id LIKE CONCAT('%',#{record.groupId},'%')
        </if>
        <if test="record.name != null and record.name!= ''">
            AND t_ad.name LIKE CONCAT('%',#{record.name},'%')
        </if>
        <if test="record.image != null and record.image!= ''">
            AND t_ad.image LIKE CONCAT('%',#{record.image},'%')
        </if>
        <if test="record.enabled != null and record.enabled>0 ">
            AND t_ad.enabled LIKE CONCAT('%',#{record.enabled},'%')
        </if>
        <if test="record.targetUrl != null and record.targetUrl!= ''">
            AND t_ad.target_url LIKE CONCAT('%',#{record.targetUrl},'%')
        </if>
        <if test="record.orgId != null and record.orgId>0 ">
            AND t_ad.org_id LIKE CONCAT('%',#{record.orgId},'%')
        </if>
        <if test="record.strategy != null and record.strategy!= ''">
            AND t_ad.strategy LIKE CONCAT('%',#{record.strategy},'%')
        </if>
        <if test="startTime != null">
            <![CDATA[AND t_ad.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_ad.end_time <= DATE(#{endTime)]]>
        </if>
        <!--
    <if test="search != null and search != ''">
        OR t_ad.name LIKE CONCAT('%',#{search},'%')
    </if>
    -->
    </select>
</mapper>