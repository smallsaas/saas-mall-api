<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.frontproduct.services.domain.dao.QueryProductPurchaseStrategyItemDao">
                                                                                                                                                                                                                                    <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                        t_product_purchase_strategy_item.id, t_product_purchase_strategy_item.strategy_id AS strategyId, t_product_purchase_strategy_item.name, t_product_purchase_strategy_item.operator, t_product_purchase_strategy_item.sort_num AS sortNum, t_product_purchase_strategy_item.param
    </sql>



    <select id="findProductPurchaseStrategyItemPage" resultType="ProductPurchaseStrategyItemRecord" parameterType="ProductPurchaseStrategyItemRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_product_purchase_strategy_item
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                AND t_product_purchase_strategy_item.id LIKE CONCAT('%',#{record.id},'%')
            </if>
                                                                                            <if test="record.strategyId != null and record.strategyId>0 ">
                AND t_product_purchase_strategy_item.strategy_id LIKE CONCAT('%',#{record.strategyId},'%')
            </if>
                                <if test="record.name != null and record.name!= ''">
                AND t_product_purchase_strategy_item.name LIKE CONCAT('%',#{record.name},'%')
            </if>
                                <if test="record.operator != null and record.operator!= ''">
                AND t_product_purchase_strategy_item.operator LIKE CONCAT('%',#{record.operator},'%')
            </if>
                                                                                            <if test="record.sortNum != null and record.sortNum>0 ">
                AND t_product_purchase_strategy_item.sort_num LIKE CONCAT('%',#{record.sortNum},'%')
            </if>
                                <if test="record.param != null and record.param!= ''">
                AND t_product_purchase_strategy_item.param LIKE CONCAT('%',#{record.param},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_product_purchase_strategy_item.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_product_purchase_strategy_item.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_product_purchase_strategy_item.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>