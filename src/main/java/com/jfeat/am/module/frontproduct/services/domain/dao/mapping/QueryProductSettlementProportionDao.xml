<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.frontproduct.services.domain.dao.QueryProductSettlementProportionDao">
                                                                                                                                                                                                                                    <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                                                                t_product_settlement_proportion.id, t_product_settlement_proportion.product_id AS productId, t_product_settlement_proportion.name, t_product_settlement_proportion.type, t_product_settlement_proportion.proportion, t_product_settlement_proportion.level
    </sql>



    <select id="findProductSettlementProportionPage" resultType="ProductSettlementProportionRecord" parameterType="ProductSettlementProportionRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_product_settlement_proportion
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                AND t_product_settlement_proportion.id LIKE CONCAT('%',#{record.id},'%')
            </if>
                                                                                            <if test="record.productId != null and record.productId>0 ">
                AND t_product_settlement_proportion.product_id LIKE CONCAT('%',#{record.productId},'%')
            </if>
                                <if test="record.name != null and record.name!= ''">
                AND t_product_settlement_proportion.name LIKE CONCAT('%',#{record.name},'%')
            </if>
                                <if test="record.type != null and record.type!= ''">
                AND t_product_settlement_proportion.type LIKE CONCAT('%',#{record.type},'%')
            </if>
                                <if test="record.proportion != null and record.proportion!= ''">
                AND t_product_settlement_proportion.proportion LIKE CONCAT('%',#{record.proportion},'%')
            </if>
                                <if test="record.level != null and record.level>0 ">
                AND t_product_settlement_proportion.level LIKE CONCAT('%',#{record.level},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_product_settlement_proportion.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_product_settlement_proportion.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_product_settlement_proportion.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>