<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.frontproduct.services.domain.dao.QueryProductImageDao">
                                                                                                                                                                                                <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                t_product_image.id, t_product_image.product_id AS productId, t_product_image.type, t_product_image.url, t_product_image.sort_num AS sortNum,name
    </sql>



    <select id="findProductImagePage" resultType="ProductImageRecord" parameterType="ProductImageRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_product_image
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                AND t_product_image.id LIKE CONCAT('%',#{record.id},'%')
            </if>
                                                                                            <if test="record.productId != null and record.productId>0 ">
                AND t_product_image.product_id LIKE CONCAT('%',#{record.productId},'%')
            </if>
                                <if test="record.type != null and record.type>0 ">
                AND t_product_image.type LIKE CONCAT('%',#{record.type},'%')
            </if>
                                <if test="record.url != null and record.url!= ''">
                AND t_product_image.url LIKE CONCAT('%',#{record.url},'%')
            </if>
                                                                                            <if test="record.sortNum != null and record.sortNum>0 ">
                AND t_product_image.sort_num LIKE CONCAT('%',#{record.sortNum},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_product_image.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_product_image.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_product_image.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>