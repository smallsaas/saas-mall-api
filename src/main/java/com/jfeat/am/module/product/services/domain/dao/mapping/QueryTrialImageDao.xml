<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.product.services.domain.dao.QueryTrialImageDao">
                                                                                                                                                            <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                                                                                                                                        t_trial_image.id, t_trial_image.trial_id AS trialId, t_trial_image.url, t_trial_image.sort_order AS sortOrder
    </sql>



    <select id="findTrialImagePage" resultType="TrialImageRecord" parameterType="TrialImageRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_trial_image
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                AND t_trial_image.id LIKE CONCAT('%',#{record.id},'%')
            </if>
                                                                                            <if test="record.trialId != null and record.trialId>0 ">
                AND t_trial_image.trial_id LIKE CONCAT('%',#{record.trialId},'%')
            </if>
                                <if test="record.url != null and record.url!= ''">
                AND t_trial_image.url LIKE CONCAT('%',#{record.url},'%')
            </if>
                                                                                            <if test="record.sortOrder != null and record.sortOrder>0 ">
                AND t_trial_image.sort_order LIKE CONCAT('%',#{record.sortOrder},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_trial_image.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_trial_image.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_trial_image.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>