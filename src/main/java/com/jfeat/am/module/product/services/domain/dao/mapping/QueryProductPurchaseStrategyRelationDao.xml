<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.product.services.domain.dao.QueryProductPurchaseStrategyRelationDao">
                                                                                    <sql id="Base_Column_List">
                                                                                                                                                                                                                                                                                        t_product_purchase_strategy_relation.product_id AS productId, t_product_purchase_strategy_relation.strategy_id AS strategyId
    </sql>



    <select id="findProductPurchaseStrategyRelationPage" resultType="ProductPurchaseStrategyRelationRecord" parameterType="ProductPurchaseStrategyRelationRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_product_purchase_strategy_relation
        WHERE 1=1
                                                                                            <if test="record.productId != null and record.productId>0 ">
                AND t_product_purchase_strategy_relation.product_id LIKE CONCAT('%',#{record.productId},'%')
            </if>
                                                                                            <if test="record.strategyId != null and record.strategyId>0 ">
                AND t_product_purchase_strategy_relation.strategy_id LIKE CONCAT('%',#{record.strategyId},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_product_purchase_strategy_relation.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_product_purchase_strategy_relation.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_product_purchase_strategy_relation.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>