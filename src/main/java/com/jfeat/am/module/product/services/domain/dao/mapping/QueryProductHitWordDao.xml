<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jfeat.am.module.product.services.domain.dao.QueryProductHitWordDao">
                                                                                                                        <sql id="Base_Column_List">
                                                                                                                                                                                                t_product_hit_word.id, t_product_hit_word.name, t_product_hit_word.hit
    </sql>



    <select id="findProductHitWordPage" resultType="ProductHitWordRecord" parameterType="ProductHitWordRecord">
            SELECT
        <include refid="Base_Column_List" />
        FROM t_product_hit_word
        WHERE 1=1
                                <if test="record.id != null and record.id>0 ">
                AND t_product_hit_word.id LIKE CONCAT('%',#{record.id},'%')
            </if>
                                <if test="record.name != null and record.name!= ''">
                AND t_product_hit_word.name LIKE CONCAT('%',#{record.name},'%')
            </if>
                                <if test="record.hit != null and record.hit>0 ">
                AND t_product_hit_word.hit LIKE CONCAT('%',#{record.hit},'%')
            </if>
                <if test="startTime != null">
            <![CDATA[AND t_product_hit_word.start_time >= DATE(#{startTime})]]>
        </if>
        <if test="endTime != null">
            <![CDATA[AND t_product_hit_word.end_time <= DATE(#{endTime)]]>
        </if>
            <!--
        <if test="search != null and search != ''">
            OR t_product_hit_word.name LIKE CONCAT('%',#{search},'%')
        </if>
        -->
                                    </select>
</mapper>